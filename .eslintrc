{
  "extends": [
    "react-app",
    "react-app/jest",
    "prettier"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "linebreak-style": "off",
    "no-unused-vars": "warn",
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "none",
        "singleQuote": true,
        "endOfLine": "auto"
      }
    ]
  }
}